			[
				[.5, .5+1/64]
				[1, 1]
				[0, 1]
			]
		}


		EmpAbsorber
		{
			Type = ExplosiveResourceDrainSink
			ResourceType = battery
			AbsorbsResourceDrain = ceil((&~/Part/MaxHealth)/4) // 375
			RecoveryRate = ceil(&AbsorbsResourceDrain) * 0.1
		}

		Graphics
